# Example terraform.tfvars for production environment
# Copy this to terraform.tfvars and fill in the values
# IMPORTANT: Never commit terraform.tfvars to version control

# Scaleway project ID
project_id = "your-scaleway-project-id"

# Database credentials (generate secure passwords)
db_admin_password = "secure-admin-password-min-16-chars"
db_user_password  = "secure-user-password-min-16-chars"

# Redis password
redis_password = "secure-redis-password-min-16-chars"

# PASETO keys - generate with: openssl rand -base64 32
paseto_access_key  = "base64-encoded-32-byte-key"
paseto_refresh_key = "base64-encoded-32-byte-key"

# Admin token (optional) - generate with: openssl rand -hex 32
# admin_token = "secure-admin-token"

# Container image tag (set via CI/CD or manually)
container_image_tag = "stable"

# Alert contact emails
alert_contact_emails = ["ops@example.com"]

# DNS Configuration
domain_name = "ciel-social.eu"
enable_dns  = true

# SSH access (only used if bastion is enabled)
ssh_allowed_cidrs = []

# API Security Configuration (optional)
# enable_ip_restrictions = false
# allowed_ips = ["1.2.3.4/32", "5.6.7.8/32"]
# api_keys = ["api-key-1", "api-key-2"]
